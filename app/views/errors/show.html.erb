<% provide :title, title(@status, @title) %>

<section id="error-description" class="error">
  <div class="row">
    <div class="span6">
      <h1 class="centered">
        <%= @status %> <%= @title %>
      </h1>

      <p class="centered">
        <%= t '.a_preto_sa_ve' %>
        <br/>
        <span class="muted"><%= @description %></span>
      </p>
    </div>

    <div class="span6">
      <img class="unicorn" src="<%= asset_path('unicorn.png') %>" alt="JednoroÅ¾ec" />
    </div>
  </div>
</section>

<% if Rails.env.development? %>
  <section id="error-trace" class="error">
    <div class="row">
      <div class="span12">
        <%= debug @exception %>
        <%= trace @trace %>
      </div>
    </div>
  </section>
<% end %>
