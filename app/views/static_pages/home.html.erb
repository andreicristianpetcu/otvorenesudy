<% provide :header, render(partial: 'header') %>

<section class="features">
  <div class="row">
    <div class="span3">
      <img class="feature-icon" src="<%= asset_path 'features-logo.png' %>" />
    </div>

    <div class="span9">
      <h1>
        <%= t '.otvorené_súdy_9' %>
        <small><%= t '.transparentný' %></small>
      </h1>
      <p class="lead">
        <%= t '.projekt_ktorý_html' %>
      </p>
    </div>
  </div>

  <hr/>

  <div class="row">
    <div class="span3">
      <%= icon_tag :hdd %>
    </div>

    <div class="span9">
      <h1>
        <%= t '.otvorené_dáta' %>
        <small><%= t '.súdne_nbsp' %></small>
      </h1>
      <p class="lead">
        <%= t '.ponúkame_v_html' %>
      </p>
    </div>
  </div>

  <hr/>

  <div class="row">
    <div class="span3">
      <%= icon_tag :github %>
    </div>

    <div class="span9">
      <h1>
        <%= t '.otvorený' %>
        <small><%= t '.ruby_nbsp_on' %></small>
      </h1>
      <p class="lead">
        <%= t '.zdrojový_kód_html' %>
      </p>
    </div>
  </div>
</section>

<section class="logos">
  <h1 class="centered">
    <%= t '.projekt_1' %>
  </h1>

  <hr/>

  <div class="row">
    <div class="offset1 span5">
      <a class="logo-transparency" href="http://transparency.sk" target="_blank">
        <img src="<%= asset_path 'logos/transparency-colored-280.png' %>" />
      </a>
    </div>

    <div class="span5">
      <a class="logo-restart" href="http://restartslovensko.sk/" target="_blank">
        <img src="<%= asset_path 'logos/restart-colored-280.png' %>" />
      </a>
    </div>
  </div>

  <hr/>
</section>
