<% content_for :scripts do %>
  <script type="text/javascript">
    $(document).ready(function() { $('.carousel').carousel({interval: 8000}) })
  </script>
<% end %>

<header class="jumbotron">
  <div class="search">
    <div class="container">
      <h1>
        <%= t '.viac' %><br/>
        <%= t '.slovenského' %>
      </h1>

      <div class="row">
        <div class="offset2 span8">
          <%= form_tag search_decrees_path, method: :get, class: :'form-search' do %>
            <div class="input-append">
              <%= search_field_tag :search, params[:q], name: :q, placeholder: 'Vyhľadávať v súdnych rozhodnutiach&hellip;'.html_safe, class: :'search-query' %>
              <%= button_tag icon_tag(:search), name: nil, class: :'search-submit btn btn-info' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div id="carousel" class="carousel slide">
    <div class="carousel-inner pattern">
      <div class="item active">
        <div class="carousel-banner">
          <a class="banner-transparency-2-percent-2014" href="http://www.transparency.sk/podporte-nas/venujte-2-percenta/"></a>
        </div>
      </div>
      <div class="item">
        <div class="carousel-content">
          <h1>
            <%= t '.súdom_na' %><br/>
            <%= t '.nedôveruje_a' %>
            <small><%= t '.mdash_in_titút' %></small>
          </h1>
        </div>
      </div>
      <div class="item">
        <div class="carousel-content">
          <h1>
            <%= t '.trestné' %><br/>
            <%= t '.trvá_priemerne' %>
            <small><%= t '.mdash' %></small>
          </h1>
        </div>
      </div>
      <div class="item">
        <div class="carousel-content">
          <h1>
            <%= t '.u_es_miliónov' %><br/>
            <%= t '.súdy_s_a_ovate' %>
            <small><%= t '.mdash_nálezy' %></small>
          </h1>
        </div>
      </div>
      <div class="item">
        <div class="carousel-content">
          <h1>
            <%= t '.vyh_adávanie_v', :number_to => (number_to_human(Decree.total, precision: 0, significant: false).downcase) %><br/>
            <%= t '.a_3', :number_to => (number_to_human(Hearing.total, precision: 0, significant: false).downcase) %>
            <small><%= t '.mdash_otvorené' %></small>
          </h1>
        </div>
      </div>
    </div>
    <a class="carousel-control left" href="#carousel" data-slide="prev"><%= icon_tag :'angle-left' %></a>
    <a class="carousel-control right" href="#carousel" data-slide="next"><%= icon_tag :'angle-right' %></a>
  </div>
</header>
