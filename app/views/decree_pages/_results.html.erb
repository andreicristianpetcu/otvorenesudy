<% if @highlights.any? %>
  <div class="alert alert-info">
    <%= t '.pre_h_adaný_html', :close_link_to => (close_link_to @decree), :icon_tag => (icon_tag :search), :html_escape => (html_escape params[:q]), :translate_with => (translate_with_count(@highlights.size, :result)) %>
  </div>

  <dl class="unstyled">
    <% @highlights.each do |number, texts| %>
      <dt><%= icon_tag :'file-alt', label: "Strana #{number}", join: :append, class: :muted %></dt>
      <% texts.each do |text| %>
        <dd><%= link_to_decree_page @decree, number, strip_and_highlight(text), q: params[:q] %></dd>
      <% end %>
    <% end %>
  </dl>
<% else %>
  <div class="alert alert-info">
    <%= t '.pre_h_adaný_html', :close_link_to => (close_link_to @decree), :icon_tag => (icon_tag :search) %>
  </div>
<% end %>
