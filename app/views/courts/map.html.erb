<% provide :title, "Mapa súdov Slovenskej Republiky" %>

<section id="courts-map">
  <div class="page-header">
    <h1>
      <%= yield :title %>
      <br/>
      <small><%= t '.na_slovensku', :courts_size => (@courts.size), :groups_size => (@groups.size) %></small>
    </h1>
  </div>
  
  <div class="row">
    <div class="span12">
      <p>
        <%= t '.kliknutím_na', :icon_tag_map => (icon_tag :'map-marker') %>
      </p>

      <%= courts_map @groups %>
    </div>
  </div>
</section>
